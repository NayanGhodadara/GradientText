<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.customtextview.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:gradientBgColors="@array/gradient_bg"
        app:bgOrientation="horizontal"
        app:cornerRadius="10dp"
        app:gradientTextColors="@array/gradientText"
        app:textOrientation="horizontal"
        app:strokeWidth="2dp"
        app:strokeColors="@array/gradientBorder"
        app:borderOrientation="horizontal"
        android:padding="10dp"
        android:paddingVertical="100dp"
        app:dashWidth="20dp"
        app:dashGap="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>